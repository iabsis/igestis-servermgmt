#!/bin/sh
# postinst script for igestis
#
# see: dh_installdeb(1)

set -e

. /usr/share/debconf/confmodule

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;

esac

     ## Addons nécessaire au bon fonctionnement - Création des dossiers partagés 
     

     mkdir -p /home/samba/data
     chmod 755 /home/samba/data
     chmod 755 /home/samba
     chown www-data /home/samba/data
     rm -f /etc/skel/PARTAGES
     ln -sf  /home/samba/data/ /etc/skel/PARTAGES
     rm -f /root/Windows7.reg
     rm -f /root/Windows7
     ln -s /usr/share/ishare/Windows7/ /root/
     chown www-data /etc/ishare/backup/folder_list.conf
     chmod 440 /etc/sudoers.d/ishare

     # Utile pour l'automontage des espaces utilisateurs.
     
     mkdir -p /var/home
     chmod 700 /var/home
     chown www-data /var/home
     
     # On rend exécutable les scripts
     chmod +x /usr/bin/ishare*

     if [ -e /etc/cron.d/ishare-backup.dpkg-old ] ; then
       rm /etc/cron.d/ishare-backup.dpkg-old
     fi


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.



exit 0
